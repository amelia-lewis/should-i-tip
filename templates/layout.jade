doctype html
block vars
  - var bodyclass = null;

html(lang='en')
  head
    block head
      meta(charset='utf-8')
      meta(http-equiv='X-UA-Compatible', content='IE=edge,chrome=1')
      meta(name='viewport', content='width=device-width')
      title
        block title
          = locals.name
      link(rel='alternate', href=locals.url+'/feed.xml', type='application/rss+xml', title=locals.description)
      link(rel='stylesheet', href='/styles/style.css?v1.0')
      link(rel='stylesheet', href='//maxcdn.bootstrapcdn.com/font-awesome/4.3.0/css/font-awesome.min.css')
      link(href='http://fonts.googleapis.com/css?family=Roboto:500,100', rel='stylesheet', type='text/css')
      link(rel="shortcut icon", type="image/x-icon", href="/favicon.ico")
  
  body(class=bodyclass)
    //- header
    //-   .content-wrap
    //-     block header
    //-       .logo
    //-         h1
    //-           a(href=locals.url)= locals.name
    //-         p.description= locals.description
    
    #content
      block content
    
    footer
      .content-wrap
        block footer
          section.copy
            p &copy; #{ new Date().getFullYear() } 
              a(href="http://noisysocks.com/", target="_blank") Robert Anderson
              |  &amp; 
              a(href="http://amelia-lewis.com", target="_blank") Amelia Lewis

    include partials/scripts